<?xml version="1.0" encoding="iso-8859-1"?>

<root version="3.0" release="1" logo="graphics/troika_compatible_logo/logo.png">
  <description>
    <text>TFGR: A Troika! compatible Fantasy Grounds Ruleset</text>
    <author>MathArtBang</author>
    <website>https://github.com/kk49/tfgr</website>
  </description>
  <announcement
          text="TFGR is an independent production by MathArtBang and is not affiliated with the Melsonian Arts Council. Troika! Compatibility Logo Copyright 2019 Sam Mameli. "
          font="troika_font_bold"
          icon="troika_icon_compatibility_small"
  />

  <importruleset source="CoreRPG" />

  <includefile source="delete/base.xml" />
  <framedef name="desktop" merge="delete" /> <!-- disable/remove background frame that was under the background image-->
  <framedef name="shortcuts" merge="delete" /> <!-- disable/remove shortcut frame that was under the shortcuts-->

  <includefile source="game_elements.xml" />

  <!-- Graphics -->
  <includefile source="graphics/graphics_fonts.xml" />
  <includefile source="graphics/graphics_frames.xml" />
  <includefile source="graphics/graphics_icons.xml" />
  <includefile source="graphics/graphics_test.xml" />

  <!-- String resources -->
  <includefile source="strings/strings_troika.xml" />

  <!-- Common templates -->
  <includefile source="common/template_windows.xml" />

  <!--script name="NPCManager" file="scripts/manager_npc.lua" /-->

  <script name="OOBManager" file="scripts/manager_oob.lua" />
  <script name="ChatManager" file="scripts/manager_chat.lua" />
  <script name="ModuleManager" file="scripts/manager_module.lua" />

  <!-- Desktop -->
<!--  <includefile source="desktop/template_desktop.xml" />-->
  <includefile source="desktop/desktop_classes.xml" />
  <includefile source="desktop/desktop_panels.xml" />


  <!-- Campaign Records -->
  <includefile source="campaign/record_npc.xml" />
  <includefile source="campaign/record_char.xml" />




</root>