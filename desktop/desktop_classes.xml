<?xml version="1.0" encoding="iso-8859-1"?>

<root>
	<windowclass name="desktop_background">
		<script>
			function onInit()
				background.setIcon("test_icon_tower", true);
			end
		</script>
		<sheetdata>
			<genericcontrol name="background">
				<bounds>0,0,-1,-1</bounds>
				<disabled />
			</genericcontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="chat">
		<frame>frame_troika_generic</frame>
		<noclose />
		<sizelimits>
			<minimum width="350" height="350" />
			<dynamic />
		</sizelimits>
		<script>
			function onInit()
				onLockStateChanged();
			end
			function onLockStateChanged()
				resize.setVisible(not getLockState());
			end
		</script>
		<sheetdata>
			<chatentry name="entry">
<!--				<frame>troika_frame_thin</frame>-->
				<multilinespacing>20</multilinespacing>
				<chatwindow>chat</chatwindow>
				<font>chatfont</font>
<!--				<script file="desktop/scripts/chat_entry.lua" />-->
				<anchored position="insidebottomleft" offset="18,14">
					<right offset="-65" />
					<sizelimits>
						<maximum height="160" />
					</sizelimits>
				</anchored>
			</chatentry>

			<scrollbar name="entry_scroll">
				<anchored to="entry"/>
				<target>entry</target>
			</scrollbar>

			<chatwindow name="chat">
<!--				<modeframe mode="chat" name="troika_frame_chat"/>-->
<!--				<modeframe mode="story" name="troika_frame_story"/>-->
<!--				<modeframe mode="whisper" name="troika_frame_whispter"/>-->
				<linkcolor>0000FF</linkcolor>
				<linkicon normal="button_link" pressed="button_link_down" />
				<droptypes>
					<type>dice</type>
					<type>number</type>
					<type>string</type>
				</droptypes>
<!--				<script file="desktop/scripts/chat_window.lua" />-->
				<anchored position="insidetopleft" offset="20,25">
					<right offset="-30" />
					<bottom parent="entry" anchor="top" relation="relative" offset="-15" />
				</anchored>
			</chatwindow>

			<scrollbar name="chat_scroll">
				<anchored to="chat" />
				<target>chat</target>
			</scrollbar>

			<genericcontrol name="chat_status">
				<anchored to="chat" position="insidetopright" width="60" height="61" />
<!--				<icon>chat_wait</icon>-->
				<invisible />
				<script>
					function onUserStateChange(username, statename, state)
						if username == "" then
							if statename == "typing" then
								setVisible(true);
							elseif statename == "active" or statename == "idle" then
								setVisible(false);
							end
						end
					end

					function onInit()
						User.onUserStateChange = onUserStateChange;
					end
				</script>
			</genericcontrol>

			<resize name="resize"/>
		</sheetdata>
	</windowclass>

</root>