<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <template name="window_title">
        <stringcontrol name="window_title">
            <_class>window_title</_class>
            <disabled/>
            <center/>
            <anchored>
                <left anchor="left"/>
                <right anchor="right"/>
                <top anchor="top"/>
            </anchored>
        </stringcontrol>
    </template>

    <template name="window_title_field">
        <stringfield name="name">
            <_class>window_title_field</_class>
            <disabled/>
            <center/>
            <anchored>
                <left anchor="left"/>
                <right anchor="right"/>
                <top anchor="top"/>
            </anchored>
        </stringfield>
    </template>

    <template name="window_resize">
        <genericcontrol name="window_resize">
			<_class>window_resize</_class>
            <anchored height="18" width="18">
				<right />
				<bottom />
			</anchored>
			<icon>icon_window_resize</icon>

			<disabled />
        </genericcontrol>
    </template>

    <template name="window_close">
        <buttoncontrol name="window_close">
			<_class>window_close</_class>
            <anchored height="18" width="18">
				<right />
				<top />
			</anchored>

			<icon normal="icon_window_close_normal"
				  pressed="icon_window_close_pressed"
				  hover="icon_window_close_hover"
			/>
			<script>
				function onButtonPress()
                    return window.close()
                end
			</script>
        </buttoncontrol>
    </template>

    <template name="window_minimize">
        <buttoncontrol name="window_minimize">
			<_class>window_minimize</_class>
            <anchored height="18" width="18">
				<right offset="-20"/>
				<top />
			</anchored>
			<icon normal="icon_window_minimize_normal"
				  pressed="icon_window_minimize_pressed"
				  hover="icon_window_minimize_hover"
			/>
        </buttoncontrol>
    </template>

	<template name="window_link">
        <layout_buttoncontrol name="window_link">
			<_class>window_minimize</_class>
            <anchored height="18" width="18">
				<left offset="2"/>
				<top />
			</anchored>
			<icon normal="icon_window_link_normal"
				  pressed="icon_window_link_pressed"
				  hover="icon_window_link_hover"
			/>
            <script>
                function onButtonPress()
					db_ref = window.getDatabaseNode().getNodeName()
					Interface.openWindow(Core.editorFind(db_ref), db_ref)
					return true
                end

                function onDragStart(button, x, y, drag_info)
					return window.elementDrag(button, x, y, drag_info)
                end
            </script>
        </layout_buttoncontrol>
    </template>

</root>