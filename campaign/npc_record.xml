<?xml version="1.0" encoding="iso-8859-1"?>

<root>
	<windowclass name="npc">
		<script file="campaign/scripts/npc.lua" />

		<frame>frame_troika_generic</frame>

		<placement>
			<size width="350" height="300" />
		</placement>

		<sizelimits>
			<dynamic />
		</sizelimits>

		<minimize>troika_icon_npc_minimized</minimize>

		<tooltip field="name" />

		<nodelete />

		<sheetdata>
			<Actor />
			<TypeLayout/>

			<LayoutBeginForm name="8 8"/>

				<stringcontrol name="l0"><static textres="troika_name" /></stringcontrol>
				<stringfield name="name" ><default text="NAME ME!!!"/></stringfield>

				<stringcontrol name="l1"><static textres="troika_no_id_name" /></stringcontrol>
				<stringfield name="no_id_name" ><default text="NAME ME A BIT LESS!!!"/></stringfield>

				<stringcontrol name="l2"><static textres="troika_skill" /></stringcontrol>
				<numberfield name="skill"><default>1</default></numberfield>

				<stringcontrol name="l3"><static textres="troika_stamina" /></stringcontrol>
				<numberfield name="stamina"><default>1</default></numberfield>

				<stringcontrol name="l4"><static textres="troika_initiative" /></stringcontrol>
				<numberfield name="initiative"><default>1</default></numberfield>

				<stringcontrol name="l5"><static textres="troika_armour" /></stringcontrol>
				<numberfield name="armour"><default>1</default></numberfield>

				<stringcontrol name="l6"><static textres="troika_damage_as" /></stringcontrol>
				<stringfield name="damage_as"><default>the wind</default></stringfield>

				<stringcontrol name="l7"><static textres="troika_description" /></stringcontrol>
				<stringfield name="description"><default>DESCRIBE ME!!!</default></stringfield>

				<stringcontrol name="l8"><static textres="troika_special" /></stringcontrol>
				<stringfield name="special"><default>AM I SPECIAL?</default></stringfield>

				<stringcontrol name="l9"><static textres="troika_mien" /></stringcontrol>
				<stringfield name="mien"><default>1,2,3,4,5,6</default></stringfield>

			<LayoutEnd/>

			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>
</root>
