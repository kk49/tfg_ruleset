<?xml version="1.0" encoding="iso-8859-1"?>

<root>
	<windowclass name="character_sheet">
		<script file="campaign/scripts/character_sheet.lua" />

		<frame>frame_troika_generic</frame>

		<placement>
			<size width="525" height="568" />
		</placement>

		<sizelimits>
			<dynamic />
        </sizelimits>

<!--		<minimize>troika_icon_char_minimized</minimize>-->

		<tooltip field="name" />

		<nodelete />

<!--		<softclose />-->

		<playercontrol />

		<sheetdata>
			<TypeLayout/>

			<LayoutBeginForm name="8 8 80 0"/>
				<layout_stringcontrol name="l0"><static textres="troika_name" /></layout_stringcontrol>
				<layout_stringfield name="name" ><default text="NAME ME!!!"/></layout_stringfield>

				<layout_stringcontrol name="l1"><static textres="troika_skill" /></layout_stringcontrol>
				<layout_numberfield name="skill"><default>1</default></layout_numberfield>

				<layout_stringcontrol name="l2"><static textres="troika_stamina" /></layout_stringcontrol>
				<layout_numberfield name="stamina"><default>1</default></layout_numberfield>

				<layout_stringcontrol name="l3"><static textres="troika_luck" /></layout_stringcontrol>
				<layout_numberfield name="luck"><default>1</default></layout_numberfield>
			<LayoutEnd/>

			<close/>
			<resize/>

		</sheetdata>
	</windowclass>
</root>
