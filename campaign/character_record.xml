<?xml version="1.0" encoding="iso-8859-1"?>

<root>
	<windowclass name="character">
		<script file="campaign/scripts/character.lua" />

		<frame>frame_troika_generic</frame>

		<placement>
			<size width="525" height="568" />
		</placement>

		<sizelimits>
			<dynamic />
        </sizelimits>

<!--		<minimize>troika_icon_char_minimized</minimize>-->

		<tooltip field="name" />

		<nodelete />

		<softclose />

		<playercontrol />

		<sheetdata>
			<Actor/>
			<TypeLayout/>

			<LayoutBeginForm name="8 8"/>
				<stringcontrol name="l0"><static textres="troika_name" /></stringcontrol>
				<stringfield name="name" ><default text="NAME ME!!!"/></stringfield>

				<stringcontrol name="l1"><static textres="troika_skill" /></stringcontrol>
				<numberfield name="skill"><default>1</default></numberfield>

				<stringcontrol name="l2"><static textres="troika_stamina" /></stringcontrol>
				<numberfield name="stamina"><default>1</default></numberfield>

				<stringcontrol name="l3"><static textres="troika_luck" /></stringcontrol>
				<numberfield name="luck"><default>1</default></numberfield>
			<LayoutEnd/>

			<close_charsheet />
			<resize_charsheet />
		</sheetdata>
	</windowclass>
</root>
