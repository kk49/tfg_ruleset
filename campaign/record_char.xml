				</tab>
			</tabs_charsheet>
			-->

			<close_charsheet />
			<resize_charsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="charsheet_main">
		<margins control="0,0,0,2" />
		<sheetdata>
			<anchor_column name="columnanchor" />

			<label_column name="skill_label">
				<static textres="troika_skill"/>
			</label_column>
			<number_column name="skill">
				<default>1</default>
			</number_column>

			<label_column name="stamina_label">
				<static textres="troika_stamina" />
			</label_column>
			<number_column name="stamina">
				<default>1</default>
			</number_column>

			<label_column name="luck_label">
				<static textres="troika_luck" />
			</label_column>
			<number_column name="luck">
				<default>1</default>
			</number_column>


		</sheetdata>
	</windowclass>

</root>
